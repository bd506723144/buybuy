.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.grid-item {
  width: calc((100% - 32rpx) / 3);
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
}

.grid-image {
  width: 100%;
  height: 200rpx;
  display: block;
}

.grid-title {
  font-size: 24rpx;
  padding: 12rpx;
  color: #333333;
}
